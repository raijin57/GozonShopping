{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "orders_api": {
        "ClusterId": "orders_cluster",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        }
      },
      "payments_api": {
        "ClusterId": "payments_cluster",
        "Match": {
          "Path": "/api/accounts/{**catch-all}"
        }
      },
      "orders_swagger": {
        "ClusterId": "orders_cluster",
        "Match": {
          "Path": "/orders/swagger/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/swagger/{**catch-all}"
          }
        ]
      },
      "payments_swagger": {
        "ClusterId": "payments_cluster",
        "Match": {
          "Path": "/payments/swagger/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/swagger/{**catch-all}"
          }
        ]
      },
      "signalr_orders": {
        "ClusterId": "orders_cluster",
        "Match": {
          "Path": "/hubs/orders/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "orders_cluster": {
        "Destinations": {
          "orders": {
            "Address": "http://orders-service:8080"
          }
        }
      },
      "payments_cluster": {
        "Destinations": {
          "payments": {
            "Address": "http://payments-service:8080"
          }
        }
      }
    }
  }
}
